{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es5", "es6", "dom"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "paths": {
      "@examples/*": ["./examples/*"],
      "@bin/*": ["./bin/*"],
      "@lib/*": ["./lib/*"]
    },
  },
  "include": ["./bin/**/*", "./examples/**/*", "./lib/**/*", "./lib/declare.d.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
